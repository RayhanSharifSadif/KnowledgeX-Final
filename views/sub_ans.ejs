<%- include("header") %>

<h1>Upload Answer</h1>

<form action="/submit_answer" method="POST" enctype="multipart/form-data">
  <div>
    <label for="answer_name">Answer Name:</label>
    <input type="text" id="answer_name" name="answer_name" required>
  </div>

  <div>
    <label for="answer_file">Upload Answer File:</label>
    <input type="file" id="answer_file" name="answer_file" accept=".pdf,.doc,.docx" required>
  </div>

  <button type="submit">Submit Answer</button>
</form>

